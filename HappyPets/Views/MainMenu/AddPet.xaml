<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyPets.Views.MainMenu.AddPet"
              BackgroundImageSource="https://i.ibb.co/PcBbDDM/fondocolor.png"
             IconImageSource="https://i.ibb.co/qRTRpCG/boton-agregar.png"
             >
    <StackLayout>
        <ScrollView>
        <Grid>
            
            <Frame BackgroundColor="#ff7711"
               Margin="10,155,10,50"
               BorderColor="Black">
                <StackLayout>
                    
                    <Label Text="Name of Dog" TextColor="White"/>
                    <Frame BackgroundColor="#000"
                       Margin="0,0,0,10">
                        <Entry Placeholder="Pet Name"
                           TextColor="#fff"
                           Margin="-8"
                           Text="{Binding PetName}"
                           FontSize="Medium"/>
                    </Frame>
                    <Label Text="dog breed" TextColor="White"/>
                    <Frame BackgroundColor="#000"
                       Margin="0,0,0,10">
                        <Entry Placeholder="dog breed"
                           TextColor="#fff"
                           Margin="-8"
                           Text="{Binding PetRaze}"
                           FontSize="Medium"/>
                    </Frame>
                    <Label Text="Age" TextColor="White"/>
                    <Frame BackgroundColor="#000"
                           Margin="0,0,0,10">
                        <Entry Placeholder="Age" 
                               TextColor="#fff"
                               Margin="-8"
                               Text="{Binding PetAge}"
                               FontSize="Medium"
                            />
                    </Frame>

                    <Label Text="Size" TextColor="White"/>
                    <Frame BackgroundColor="#000"
                           Margin="0,0,0,10">
                        <Entry Placeholder="Age" 
                               TextColor="#fff"
                               Margin="-8"
                               Text="{Binding PetSize}"
                               FontSize="Medium"
                            />
                    </Frame>
                    <StackLayout>
                        <Picker Title="Dispensador"
                          TitleColor="White"
                           FontSize="Large"
                            TextColor="White">
                            <Picker.ItemsSource >
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Default</x:String>
                                    <x:String>Baboon</x:String>
                                    <x:String>Capuchin Monkey</x:String>
                                    <x:String>Blue Monkey</x:String>
                                    <x:String>Squirrel Monkey</x:String>
                                    <x:String>Golden Lion Tamarin</x:String>
                                    <x:String>Howler Monkey</x:String>
                                    <x:String>Japanese Macaque</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </StackLayout>
                    

                    <Button Text="Register"
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        FontSize="Large"
                        Command="{Binding RegisterPetCommand}"
                        BackgroundColor="White"
                        TextColor="#ff7711"
                        BorderColor="Black"
                        BorderWidth="2"/>
                </StackLayout>
            </Frame>
            
                <Image Aspect="AspectFit"
                   Source="https://i.ibb.co/VtYPz6w/pista.png"
                   HeightRequest="140"
                   WidthRequest="140"
                   VerticalOptions="Start"
                   HorizontalOptions="Center" />
            
        </Grid>
        </ScrollView>
    </StackLayout>


</ContentPage>