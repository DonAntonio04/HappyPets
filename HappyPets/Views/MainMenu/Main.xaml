<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyPets.Views.MainMenu.Main"
            xmlns:local="clr-namespace:HappyPets.Views.MainMenu"
              BackgroundImageSource="https://i.ibb.co/PcBbDDM/fondocolor.png"
             Title="Main"
            
            BackgroundColor="Orange"
        
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core">

    <android:TabbedPage.ToolbarPlacement>Bottom</android:TabbedPage.ToolbarPlacement>
    <android:TabbedPage.BarSelectedItemColor>Orange</android:TabbedPage.BarSelectedItemColor>
    <android:TabbedPage.BarItemColor>Black</android:TabbedPage.BarItemColor>

    <TabbedPage.Children>
        <local:AddPet Title="AddPet"/>
        <local:MyPets Title="MyPets"/>
        <local:Users Title="Users"/>
    </TabbedPage.Children>
</TabbedPage>